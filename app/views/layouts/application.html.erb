<!DOCTYPE html>
<html>
<head>
  <title>Clutter</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= csrf_meta_tags %>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>
<body id="page-top">
  <div class="container">
    <% if flash[:notice] %>
      <div class="alert alert-success text-center">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%= flash[:notice] %>
      </div>
    <% elsif flash[:alert] %>
      <div class="alert alert-warning text-center">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%= flash[:alert] %>
      </div>
    <% end %>
  </div>
  <nav class="navbar navbar-default navbar-fixed-top">
    <div class="wrap">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#myNavbar">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a href="<%= root_path %>#page-top" class="navbar-brand js-scroll-trigger">Clutter</a>
        </div>
        <div class="collapse navbar-collapse" id="myNavbar">
          <ul class="nav navbar-nav navbar-right">
            <% if current_page?(root_path) && !user_signed_in? %>
              <li><a href="#about" class="js-scroll-trigger">About</a></li>
              <li><a href="#services" class="js-scroll-trigger">Services</a></li>
              <li><a href="#projects" class="js-scroll-trigger">Projects</a></li>
              <li><a href="#team" class="js-scroll-trigger">Team</a></li>
              <li><%= link_to "Login", new_user_session_path %><li>
              <li><%= link_to "Sign Up", new_user_registration_path %><li>
            <% end %>
            <% if user_signed_in? %>
              <li><%= link_to "Process", root_path %></li>
              <li><%= link_to "Profile", edit_user_registration_path %></li>
              <li><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
            <% end %>
            <% if current_page?(new_user_registration_path) %>
              <li><%= link_to "Login", new_user_session_path %><li>
            <% elsif current_page?(new_user_session_path) %>
              <li><%= link_to "Sign Up", new_user_registration_path %><li>
            <% end %>
           </ul>
        </div>
      </div>
    </div>
  </nav>

  <%= yield %>


</body>
</html>
