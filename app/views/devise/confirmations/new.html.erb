<div class="container form">
  <div class="row">
    <h2 class="text-center">CONFIRMATION EMAIL</h2>
    <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
      <%= render 'shared/errors', obj: resource %>
      <div class="col-md-4 col-md-offset-4">
        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: "Enter email" %>
        </div>
        <div class="form-group">
          <%= f.submit "Resend Instructions", class: 'btn btn-primary' %>
        </div>
        <div class="form-group">
          <%= render "devise/shared/links" %> 
        </div>
      <% end %>
    </div>
  </div>
</div>